<style>
  .linea {
    border-top: 1px solid black;
  }

  body {
    background-color: #EBEBEB;
  }
  a{
      text-decoration: none;
  }
</style>

<body class="m-0 vh-100 row justify-content-center align-items-center text-center" cz-shortcut-listen="true">

  <main class="form-signin">
    <form action="" method="post">
      <a href='../'><img class="mb-4" src="../images/logo.png" alt="" width="100" height="100"></a>
      {% block sesion %}{% endblock %}

      {% block form %}{% endblock %}

      <div class="col-2 offset-5  linea">
        <p class="mt-2 text-muted">© 2021–2022</p>
      </div>
    </form>
  </main>


  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
    crossorigin="anonymous"></script>
</body>

</html>