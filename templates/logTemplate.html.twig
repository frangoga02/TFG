{% extends "base2.html.twig" %}
{% block sesion %}
<h1 class="h3 mb-3 fw-normal">Iniciar Sesión</h1>
{% endblock %}  
{% block form %}

<div class="col-2 offset-5  d-flex justify-content-center form-floating mb-2">
  <input type="text" name='nombre' class="form-control" id="floatingInput" placeholder="Correo Electrónico">
  <label for="floatingInput">Usuario</label>
</div>

<div class="form-floating col-2 offset-5 mb-2">
  <input type="password" name='password' class="form-control" id="floatingPassword" placeholder="Contraseña">
  <label for="floatingPassword">Contraseña</label>
</div>

<div class="col-2 offset-5 mb-3">
  <a href='/add'><button class="w-100 btn btn-lg btn-warning " type="submit">Iniciar Sesión</button></a>
</div>

{% endblock %}